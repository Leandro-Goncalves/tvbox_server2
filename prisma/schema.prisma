generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  guid           String    @id @default(uuid())
  name           String    @unique
  password       String
  // lastLogin      DateTime?
  isLogged       Boolean?  @default(false)
  isBlocked      Boolean?  @default(false)
  expirationDate DateTime  @default(now())
  userApp        userApp[]
  // reboot         reboot[]
}

// model reboot {
